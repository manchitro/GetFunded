<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
  </head>
  <body>
    <form method="post">
      <fieldset>
        <legend>Login</legend>
        <table>
          <tr>
            <%= alert %>
          </tr>
          <tr>
            <td>Username</td>
            <td><input type="text" name="username" /></td>
          </tr>
          <tr>
            <td>Password</td>
            <td><input type="password" name="password" /></td>
          </tr>
          <tr>
            <td></td>
            <td><input type="submit" name="submit" value="Login" /></td>
          </tr>
        </table>
      </fieldset>
    </form>
    <a href="/password-recovery">Forgot Password?</a>
    <a href="/signup">Create account</a>
  </body>
</html>
